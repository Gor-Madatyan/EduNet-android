<resources>
    <!-- Base application theme. -->
    <style name="Theme.EduNet" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EduNet.GoogleButton" parent="BaseButton">
        <item name="icon">@drawable/ic_googleg_color_24dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="BaseButton">
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="android:insetBottom">@dimen/idp_button_inset_bottom</item>
        <item name="android:insetTop">@dimen/idp_button_inset_top</item>
        <item name="android:insetLeft">@dimen/idp_button_inset_left</item>
        <item name="android:insetRight">@dimen/idp_button_inset_right</item>
    </style>

    <style name="Theme.EduNet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EduNet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>